{
  "kind": "collectionType",
  "collectionName": "job_listings",
  "info": {
    "singularName": "job-listing",
    "pluralName": "job-listings",
    "displayName": "Job Listing",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "designation": {
      "type": "string"
    },
    "job_description": {
      "type": "text"
    },
    "job_type": {
      "type": "enumeration",
      "enum": [
        "Full-Time",
        "Part-Time",
        "Contract-Based",
        "Freelance",
        "Internship"
      ]
    },
    "publish_status": {
      "type": "boolean",
      "default": false
    },
    "step_number": {
      "type": "integer"
    },
    "slug": {
      "type": "string"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "job_listings"
    },
    "area": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::area.area"
    },
    "logo_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "contact": {
      "type": "component",
      "repeatable": false,
      "component": "contact.contact-details"
    },
    "payment_details": {
      "type": "component",
      "repeatable": false,
      "component": "payment.payment"
    },
    "payment_history": {
      "type": "component",
      "repeatable": true,
      "component": "payment.payment"
    },
    "open_positions": {
      "type": "integer"
    },
    "job_title": {
      "type": "string"
    },
    "educational_qualification": {
      "type": "enumeration",
      "enum": [
        "Below 10th",
        "SSC/10th",
        "PUC/12th",
        "Diploma",
        "Graduate",
        "Post Graduate"
      ]
    },
    "job_location": {
      "type": "enumeration",
      "enum": [
        "Work from office (WFO)",
        "Work from home (WFH)",
        "Hybrid (WFO + WFH)",
        "Field Job"
      ]
    },
    "gender": {
      "type": "enumeration",
      "enum": [
        "Male only",
        "Female only",
        "Any gender"
      ]
    },
    "job_experience": {
      "type": "enumeration",
      "enum": [
        "Fresher",
        "Experienced",
        "Any"
      ]
    },
    "interview_mode": {
      "type": "enumeration",
      "enum": [
        "In-Person",
        "Telephonic / Online"
      ]
    },
    "year_of_experience": {
      "type": "string"
    },
    "job_shift": {
      "type": "enumeration",
      "enum": [
        "General",
        "Morning",
        "Afternoon",
        "Night",
        "Rotational"
      ]
    },
    "salary_range_min": {
      "type": "biginteger"
    },
    "salary_range_max": {
      "type": "biginteger"
    },
    "preferred_languages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::language.language"
    }
  }
}
